#!/usr/bin/env bash
# Script that writes its PID to a file, loops forever, and handles signals

PID_FILE="/var/run/myscript.pid"
echo "$$" > "$PID_FILE"

# SIGINT → message only
trap 'echo "Y U no love me?!"' SIGINT

# SIGTERM → message + cleanup + exit
trap 'echo "I hate the kill command"; rm -f "$PID_FILE"; exit' SIGTERM

# SIGQUIT → cleanup + exit
trap 'rm -f "$PID_FILE"; exit' SIGQUIT

while true; do
    echo "To infinity and beyond"
    sleep 2
done
